<div class="page-header">
  <h1>List of Post by most like order </h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Owner</th>
      <th>Profile Picture</th>
      <th>Likes</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td> <%= post.title %> </td>
        <td> <%= post.user_name %> </td>
        <td> 
          <div class="profile_picture">
            <%= image_tag post.user_profile_image, class: 'profile-img img-circle'  %>
          </div>
        </td>
        <td> 
          <%= post.likes_count %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>